{
    "default_settings": {
        "output_extension": "mp4",
        "video_codec": "copy",
        "audio_codec": "copy",
        "ffmpeg_path": "",
        "ffprobe_path": ""
    },
    "tasks": [
        {
            "order": 1,
            "type": "download",
            "path": "./videos",
            "is_batch": false,
            "parameters": {
                "url": "https://sample-videos.com/zip/10/mp4/SampleVideo_1280x720_1mb.mp4",
                "output_filename": "sample_video.mp4"
            }
        },
        {
            "order": 2,
            "type": "split",
            "is_batch": false,
            "path": "./videos",
            "parameters": {
                "source_file": "sample_video.mp4",
                "output_name": "sample_segment",
                "output_extension": "mp4",
                "max_size": "500KB"
            }
        },
        {
            "order": 3,
            "type": "clip",
            "is_batch": false,
            "path": "./videos",
            "parameters": {
                "source_file": "sample_video.mp4",
                "output_name": "sample_clip",
                "output_extension": "mp4",
                "intervals": [
                    {"start": "0", "end": "5"},
                    {"start": "5", "end": "10"}
                ]
            }
        },
        {
            "order": 4,
            "type": "download",
            "path": "./videos",
            "is_batch": true,
            "parameters": {
                "is_parallel": true,
                "output_filename": "sample_postfix",
                "output_extension": "mp4",
                "urls": [
                    "https://sample-videos.com/zip/10/mp4/SampleVideo_640x360_1mb.mp4",
                    "https://sample-videos.com/zip/10/mp4/SampleVideo_1920x1080_1mb.mp4"
                ]
            }
        },
        {
            "order": 5,
            "type": "split",
            "path": "./videos",
            "is_batch": true,
            "parameters": {
                "max_size": "2GB",
                "output_name": "sample_segment_postfix",
                "output_extension": "mp4",
                "source_files": [
                    "SampleVideo_640x360_1mb.mp4",
                    "SampleVideo_1920x1080_1mb.mp4"
                ]
            }
        },
        {
            "order": 6,
            "type": "gif",
            "parameters": {
                "source_file": "sample_video.mp4",
                "output_name": "sample_gif",
                "num_clips": 5,
                "clip_duration": 3.0,
                "fps": 10,
                "scale_width": 320,
                "quality_level": "medium",
                "create_thumbnails": true
            }
        }   
    ]
}